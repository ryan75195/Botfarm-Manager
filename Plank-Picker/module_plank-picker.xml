<?xml version="1.0" encoding="UTF-8"?>
<project name="module_plank-picker" default="compile.module.plank-picker">
  <dirname property="module.plank-picker.basedir" file="${ant.file.module_plank-picker}"/>
  
  <property name="module.jdk.home.plank-picker" value="${jdk.home.1.8}"/>
  <property name="module.jdk.bin.plank-picker" value="${jdk.bin.1.8}"/>
  <property name="module.jdk.classpath.plank-picker" value="jdk.classpath.1.8"/>
  
  <property name="compiler.args.plank-picker" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="plank-picker.output.dir" value="${module.plank-picker.basedir}/out/production/PlankLooter/production/Plank-Picker"/>
  <property name="plank-picker.testoutput.dir" value="${module.plank-picker.basedir}/out/production/PlankLooter/test/Plank-Picker"/>
  
  <path id="plank-picker.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="plank-picker.module.production.classpath">
    <path refid="${module.jdk.classpath.plank-picker}"/>
    <path refid="library.osbot_2.5.67.classpath"/>
  </path>
  
  <path id="plank-picker.runtime.production.module.classpath">
    <pathelement location="${plank-picker.output.dir}"/>
    <path refid="library.osbot_2.5.67.classpath"/>
  </path>
  
  <path id="plank-picker.module.classpath">
    <path refid="${module.jdk.classpath.plank-picker}"/>
    <pathelement location="${plank-picker.output.dir}"/>
    <path refid="library.osbot_2.5.67.classpath"/>
  </path>
  
  <path id="plank-picker.runtime.module.classpath">
    <pathelement location="${plank-picker.testoutput.dir}"/>
    <pathelement location="${plank-picker.output.dir}"/>
    <path refid="library.osbot_2.5.67.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.plank-picker">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.plank-picker">
    <patternset refid="excluded.from.module.plank-picker"/>
  </patternset>
  
  <path id="plank-picker.module.sourcepath">
    <dirset dir="${module.plank-picker.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.plank-picker" depends="compile.module.plank-picker.production,compile.module.plank-picker.tests" description="Compile module Plank-Picker"/>
  
  <target name="compile.module.plank-picker.production" depends="register.custom.compilers" description="Compile module Plank-Picker; production classes">
    <mkdir dir="${plank-picker.output.dir}"/>
    <javac2 destdir="${plank-picker.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.plank-picker}/javac">
      <compilerarg line="${compiler.args.plank-picker}"/>
      <bootclasspath refid="plank-picker.module.bootclasspath"/>
      <classpath refid="plank-picker.module.production.classpath"/>
      <src refid="plank-picker.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.plank-picker"/>
    </javac2>
    
    <copy todir="${plank-picker.output.dir}">
      <fileset dir="${module.plank-picker.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.plank-picker.tests" depends="register.custom.compilers,compile.module.plank-picker.production" description="compile module Plank-Picker; test classes" unless="skip.tests"/>
  
  <target name="clean.module.plank-picker" description="cleanup module">
    <delete dir="${plank-picker.output.dir}"/>
    <delete dir="${plank-picker.testoutput.dir}"/>
  </target>
</project>